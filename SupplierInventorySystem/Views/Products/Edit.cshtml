@model SupplierInventorySystem.Models.Product

@{
    ViewData["Title"] = "עריכת מוצר";
}

<div class="container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="fas fa-edit"></i> עריכת מוצר: @Model.Name
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <!-- עמודה ימנית -->
                            <div class="col-md-6">
                                <h4 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-info-circle"></i> פרטים בסיסיים
                                </h4>

                                <div class="mb-3">
                                    <label asp-for="Sku" class="form-label fw-bold">
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Sku" class="form-control" required />
                                    <span asp-validation-for="Sku" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label fw-bold"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label fw-bold"></label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                        <option value="">-- בחר קטגוריה --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DefaultUnitId" class="form-label fw-bold"></label>
                                    <select asp-for="DefaultUnitId" class="form-select" asp-items="ViewBag.DefaultUnitId">
                                        <option value="">-- בחר יחידת מידה --</option>
                                    </select>
                                    <span asp-validation-for="DefaultUnitId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- עמודה שמאלית -->
                            <div class="col-md-6">
                                <h4 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-cogs"></i> הגדרות מתקדמות
                                </h4>

                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title">סוג המוצר:</h6>
                                        <div class="form-check form-switch">
                                            <input asp-for="IsService" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsService" class="form-check-label"></label>
                                        </div>
                                    </div>
                                </div>

                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title">מעקב מלאי:</h6>
                                        <div class="form-check form-switch mb-2">
                                            <input asp-for="TrackSerials" class="form-check-input" type="checkbox" />
                                            <label asp-for="TrackSerials" class="form-check-label"></label>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input asp-for="TrackLots" class="form-check-input" type="checkbox" />
                                            <label asp-for="TrackLots" class="form-check-label"></label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="ReorderPoint" class="form-label fw-bold"></label>
                                        <input asp-for="ReorderPoint" class="form-control" type="number" step="0.01" />
                                        <span asp-validation-for="ReorderPoint" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="ReorderQty" class="form-label fw-bold"></label>
                                        <input asp-for="ReorderQty" class="form-control" type="number" step="0.01" />
                                        <span asp-validation-for="ReorderQty" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="Active" class="form-check-input" type="checkbox" />
                                            <label asp-for="Active" class="form-check-label fw-bold"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <strong>תאריך יצירה:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm") |
                                <strong>עדכון אחרון:</strong> @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="fas fa-save"></i> שמור שינויים
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                                    <i class="fas fa-eye"></i> צפה בפרטים
                                </a>
                                <a asp-action="Index" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-arrow-right"></i> חזרה לרשימה
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Toggle reorder fields based on IsService
        function toggleServiceFields() {
            if($('#IsService').is(':checked')) {
                $('#TrackSerials, #TrackLots').prop('disabled', true).closest('.card').addClass('opacity-50');
                $('#ReorderPoint, #ReorderQty').prop('disabled', true).closest('.row').addClass('opacity-50');
            } else {
                $('#TrackSerials, #TrackLots').prop('disabled', false).closest('.card').removeClass('opacity-50');
                $('#ReorderPoint, #ReorderQty').prop('disabled', false).closest('.row').removeClass('opacity-50');
            }
        }

        $('#IsService').change(toggleServiceFields);
        $(document).ready(toggleServiceFields);
    </script>
}