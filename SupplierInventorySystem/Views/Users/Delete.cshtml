@model SupplierInventorySystem.Models.User
@{
    ViewData["Title"] = "מחיקת משתמש";
}

<div class="container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> אישור מחיקה</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>שים לב!</strong> פעולה זו אינה ניתנת לביטול.
                    </div>

                    <p class="lead">האם אתה בטוח שברצונך למחוק את המשתמש הזה?</p>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">שם משתמש</dt>
                                <dd class="col-sm-8 fw-bold">@Model.Username</dd>

                                <dt class="col-sm-4">דוא״ל</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">שם מלא</dt>
                                <dd class="col-sm-8">@(Model.FullName ?? "לא צוין")</dd>

                                <dt class="col-sm-4">תפקיד</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Role != null)
                                    {
                                        <span class="badge bg-info">@Model.Role.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">ללא תפקיד</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> ביטול
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> אישור מחיקה
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
