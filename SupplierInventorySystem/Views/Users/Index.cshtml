@model IEnumerable<SupplierInventorySystem.ViewModels.UserListViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "ניהול משתמשים";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
    var currentRole = ViewData["CurrentRole"] as int?;
    var activeOnly = ViewData["ActiveOnly"] as bool? ?? false;
    var roles = ViewBag.Roles as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<div class="container-fluid" dir="rtl">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> ניהול משתמשים</h2>
        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-user-plus"></i> הוסף משתמש
            </a>
            <a asp-controller="Roles" asp-action="Index" class="btn btn-info">
                <i class="fas fa-user-tag"></i> ניהול תפקידים
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-filter"></i> סינון וחיפוש
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">חיפוש</label>
                    <input type="text" name="searchString" value="@currentFilter"
                           class="form-control" placeholder="שם משתמש, דוא״ל או שם מלא" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">תפקיד</label>
                    <select name="roleId" class="form-select">
                        <option value="">-- כל התפקידים --</option>
                        @foreach (var r in roles)
                        {
                            var isSelected = currentRole.HasValue && r.Value == currentRole.Value.ToString();
                            <option value="@r.Value" selected="@isSelected">@r.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">סטטוס</label>
                    <div class="form-check mt-2">
                        <input type="checkbox" name="activeOnly" value="true"
                               class="form-check-input" id="activeOnly" @(activeOnly ? "checked" : "") />
                        <label class="form-check-label" for="activeOnly">רק משתמשים פעילים</label>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> סנן
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow">
        <div class="card-header bg-secondary text-white">
            <i class="fas fa-list"></i> רשימת משתמשים (@Model.Count())
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>שם משתמש</th>
                            <th>דוא״ל</th>
                            <th>שם מלא</th>
                            <th>תפקיד</th>
                            <th class="text-center">סטטוס</th>
                            <th>התחברות אחרונה</th>
                            <th class="text-center">פעולות</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@user.Id" class="fw-bold">
                                            @user.Username
                                        </a>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.FullName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.RoleName))
                                        {
                                            <span class="badge bg-info">@user.RoleName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">ללא תפקיד</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (user.IsLocked)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-lock"></i> חסום
                                            </span>
                                        }
                                        else if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> פעיל
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times"></i> לא פעיל
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.LastLogin.HasValue)
                                        {
                                            @user.LastLogin.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">מעולם לא התחבר</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-warning" title="עריכה">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="ResetPassword" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-info" title="איפוס סיסמה">
                                                <i class="fas fa-key"></i>
                                            </a>
                                            <form asp-action="ToggleActive" asp-route-id="@user.Id"
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                @if (user.IsActive)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-secondary"
                                                            title="השבת" onclick="return confirm('האם להשבית את המשתמש?')">
                                                        <i class="fas fa-user-slash"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-success"
                                                            title="הפעל">
                                                        <i class="fas fa-user-check"></i>
                                                    </button>
                                                }
                                            </form>
                                            @if (user.IsLocked)
                                            {
                                                <form asp-action="Unlock" asp-route-id="@user.Id"
                                                      method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-success"
                                                            title="שחרר מחסימה">
                                                        <i class="fas fa-unlock"></i>
                                                    </button>
                                                </form>
                                            }
                                            <a asp-action="Delete" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-danger" title="מחיקה">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-users fa-3x mb-3 d-block"></i>
                                    לא נמצאו משתמשים
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
