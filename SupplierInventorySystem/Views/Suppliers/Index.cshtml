@model IEnumerable<SupplierInventorySystem.Models.Supplier>

@{
    ViewData["Title"] = "ניהול ספקים";
}

<div class="container-fluid" dir="rtl">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">
                <i class="fas fa-truck"></i> ניהול ספקים
            </h1>
        </div>
        <div class="col-md-4 text-start">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> הוסף ספק חדש
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- חיפוש ומיון -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-10">
                        <div class="input-group">
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                                   class="form-control" placeholder="חפש לפי שם, קוד או ח.פ...">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> חיפוש
                            </button>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="fas fa-redo"></i> נקה
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- טבלת ספקים -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["CodeSortParm"]"
                                   class="text-white text-decoration-none">
                                    קוד ספק <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"
                                   class="text-white text-decoration-none">
                                    שם ספק <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>ח.פ / ע.מ</th>
                            <th>מטבע</th>
                            <th>דירוג</th>
                            <th>סטטוס</th>
                            <th class="text-center">פעולות</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Code)</strong>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.TaxId)</td>
                                <td>
                                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.DefaultCurrency)</span>
                                </td>
                                <td>
                                    @if (item.Rating.HasValue)
                                    {
                                        <span class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.Rating)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">לא דורג</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == "active")
                                    {
                                        <span class="badge bg-success">פעיל</span>
                                    }
                                    else if (item.Status == "inactive")
                                    {
                                        <span class="badge bg-secondary">לא פעיל</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">חסום</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info" title="פרטים">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-warning" title="עריכה">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger" title="מחיקה">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-info-circle"></i> לא נמצאו ספקים במערכת
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide success message after 3 seconds
        setTimeout(function() {
            $('.alert-success').fadeOut('slow');
        }, 3000);
    </script>
}