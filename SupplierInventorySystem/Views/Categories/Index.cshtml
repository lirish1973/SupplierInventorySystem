@model IEnumerable<SupplierInventorySystem.ViewModels.CategoryListViewModel>
@{
    ViewData["Title"] = "ניהול קטגוריות";
}

<div class="container-fluid" dir="rtl">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-layer-group"></i> ניהול קטגוריות מוצרים</h2>
        <div>
            <a asp-action="Tree" class="btn btn-info">
                <i class="fas fa-sitemap"></i> תצוגת עץ
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> קטגוריה חדשה
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-list"></i> רשימת קטגוריות (@Model.Count())
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>שם קטגוריה</th>
                            <th>קטגוריית אב</th>
                            <th class="text-center">מוצרים</th>
                            <th class="text-center">תת-קטגוריות</th>
                            <th class="text-center">פעולות</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>
                                        @if (category.Level > 0)
                                        {
                                            <span class="text-muted me-2">└</span>
                                        }
                                        <i class="fas @(category.ParentId == null ? "fa-folder text-warning" : "fa-folder-open text-info")"></i>
                                        <strong>@category.Name</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(category.ParentName))
                                        {
                                            <span class="badge bg-secondary">@category.ParentName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (category.ProductCount > 0)
                                        {
                                            <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id"
                                               class="badge bg-success">
                                                @category.ProductCount
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (category.SubCategoryCount > 0)
                                        {
                                            <span class="badge bg-info">@category.SubCategoryCount</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@category.Id"
                                               class="btn btn-warning" title="עריכה">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@category.Id"
                                               class="btn btn-danger" title="מחיקה">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-5">
                                    <i class="fas fa-layer-group fa-3x mb-3 d-block"></i>
                                    <h5>אין קטגוריות</h5>
                                    <a asp-action="Create" class="btn btn-success mt-2">
                                        <i class="fas fa-plus"></i> צור קטגוריה ראשונה
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
