@model List<SupplierInventorySystem.ViewModels.CategoryTreeViewModel>
@{
    ViewData["Title"] = "עץ קטגוריות";
}

<div class="container-fluid" dir="rtl">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-sitemap"></i> עץ קטגוריות מוצרים</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> תצוגת רשימה
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> קטגוריה חדשה
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <i class="fas fa-tree"></i> מבנה היררכי
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="category-tree">
                    @foreach (var category in Model)
                    {
                        @await Html.PartialAsync("_CategoryTreeNode", category)
                    }
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-layer-group fa-3x mb-3 d-block"></i>
                    <h5>אין קטגוריות</h5>
                    <a asp-action="Create" class="btn btn-success mt-2">
                        <i class="fas fa-plus"></i> צור קטגוריה ראשונה
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .category-tree {
        font-size: 1.1rem;
    }
    .category-tree ul {
        list-style: none;
        padding-right: 25px;
        margin: 0;
    }
    .category-tree > ul {
        padding-right: 0;
    }
    .category-tree li {
        padding: 8px 0;
        border-right: 2px solid #dee2e6;
        margin-right: -2px;
    }
    .category-tree li:last-child {
        border-right: none;
    }
    .category-tree li::before {
        content: "";
        display: inline-block;
        width: 20px;
        height: 2px;
        background: #dee2e6;
        vertical-align: middle;
        margin-left: 5px;
    }
    .category-tree > ul > li {
        border-right: none;
    }
    .category-tree > ul > li::before {
        display: none;
    }
    .category-item {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 5px 15px;
        background: #f8f9fa;
        border-radius: 20px;
        border: 1px solid #dee2e6;
    }
    .category-item:hover {
        background: #e9ecef;
    }
    .category-item .badge {
        font-size: 0.75rem;
    }
</style>
