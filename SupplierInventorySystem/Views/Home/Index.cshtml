@using SupplierInventorySystem.ViewModels
@model DashboardViewModel

@{
    ViewData["Title"] = "דף הבית - Dashboard";
}

<div class="container-fluid" dir="rtl">
    <!-- כותרת ברוכים הבאים -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white shadow">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="display-4 mb-2">
                                <i class="fas fa-home"></i> @ViewBag.WelcomeMessage, @ViewBag.CurrentUser!
                            </h1>
                            <p class="lead mb-0">
                                <i class="far fa-calendar-alt"></i> @DateTime.Now.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("he-IL"))
                                | <i class="far fa-clock"></i> @DateTime.Now.ToString("HH:mm")
                            </p>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="fas fa-chart-line fa-5x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- התראות -->
    @if (Model.Alerts.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                @foreach (var alert in Model.Alerts)
                {
                    <div class="alert alert-@alert.Type alert-dismissible fade show" role="alert">
                        <i class="fas @alert.Icon fa-lg me-2"></i>
                        <strong>@alert.Title:</strong> @alert.Message
                        @if (!string.IsNullOrEmpty(alert.Link))
                        {
                            <a href="@alert.Link" class="alert-link">לחץ לפרטים</a>
                        }
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
            </div>
        </div>
    }

    <!-- כרטיסי סטטיסטיקה -->
    <div class="row mb-4">
        <!-- ספקים -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-right-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">ספקים</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalSuppliers</div>
                            <div class="text-xs text-muted mt-1">
                                <span class="text-success">@Model.ActiveSuppliers פעילים</span>
                                @if (Model.BlockedSuppliers > 0)
                                {
                                    <span class="text-danger"> | @Model.BlockedSuppliers חסומים</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-truck fa-3x text-primary opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/Suppliers" class="btn btn-sm btn-primary w-100">
                            <i class="fas fa-arrow-left"></i> לניהול ספקים
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- מוצרים -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-right-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">מוצרים</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalProducts</div>
                            <div class="text-xs text-muted mt-1">
                                <span class="text-success">@Model.ActiveProducts פעילים</span>
                                @if (Model.ServiceProducts > 0)
                                {
                                    <span> | @Model.ServiceProducts שירותים</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-3x text-success opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/Products" class="btn btn-sm btn-success w-100">
                            <i class="fas fa-arrow-left"></i> לניהול מוצרים
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- קטגוריות -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-right-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">קטגוריות</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalCategories</div>
                            <div class="text-xs text-muted mt-1">
                                <span>סיווג מוצרים</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-layer-group fa-3x text-info opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/Categories" class="btn btn-sm btn-info w-100">
                            <i class="fas fa-arrow-left"></i> לניהול קטגוריות
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- משתמשים -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-right-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">משתמשים</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalUsers</div>
                            <div class="text-xs text-muted mt-1">
                                <span class="text-success">@Model.ActiveUsers פעילים</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-3x text-warning opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Users" class="btn btn-sm btn-warning w-100">
                                <i class="fas fa-arrow-left"></i> לניהול משתמשים
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-warning w-100" disabled>
                                <i class="fas fa-lock"></i> למנהלים בלבד
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- גרף מוצרים לפי קטגוריה -->
        <div class="col-xl-8 col-lg-7 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3 bg-primary text-white">
                    <h6 class="m-0 fw-bold">
                        <i class="fas fa-chart-pie"></i> פילוח מוצרים לפי קטגוריה
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.ProductsByCategory.Any())
                    {
                        <canvas id="categoryChart" style="max-height: 300px;"></canvas>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> אין נתונים להצגה
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- ספקים מובילים -->
        <div class="col-xl-4 col-lg-5 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3 bg-success text-white">
                    <h6 class="m-0 fw-bold">
                        <i class="fas fa-trophy"></i> ספקים מובילים (לפי דירוג)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.TopSuppliers.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var supplier in Model.TopSuppliers)
                            {
                                <a href="/Suppliers/Details/@supplier.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@supplier.Name</h6>
                                            <small class="text-muted">@supplier.Code | @supplier.ProductCount מוצרים</small>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning text-dark fs-6">
                                                <i class="fas fa-star"></i> @supplier.Rating.ToString("F1")
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> אין ספקים להצגה
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- מוצרים מתחת לנקודת הזמנה -->
        <div class="col-xl-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3 bg-warning text-dark">
                    <h6 class="m-0 fw-bold">
                        <i class="fas fa-exclamation-triangle"></i> מלאי נמוך - דורש הזמנה
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.LowStockProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>מק״ט</th>
                                        <th>שם מוצר</th>
                                        <th class="text-center">נקודת הזמנה</th>
                                        <th class="text-center">כמות להזמנה</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.LowStockProducts)
                                    {
                                        <tr>
                                            <td><span class="badge bg-primary">@product.Sku</span></td>
                                            <td>
                                                <a href="/Products/Details/@product.Id">@product.Name</a>
                                            </td>
                                            <td class="text-center">
                                                <span class="text-warning fw-bold">@product.ReorderPoint @product.Unit</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="text-success fw-bold">@product.ReorderQty @product.Unit</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> כל המוצרים במלאי תקין
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- מוצרים אחרונים -->
        <div class="col-xl-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3 bg-info text-white">
                    <h6 class="m-0 fw-bold">
                        <i class="fas fa-clock"></i> מוצרים שנוספו לאחרונה
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentProducts.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var product in Model.RecentProducts)
                            {
                                <a href="/Products/Details/@product.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-1">
                                                @if (product.IsService)
                                                {
                                                    <i class="fas fa-concierge-bell text-info"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-box text-primary"></i>
                                                }
                                                @product.Name
                                            </h6>
                                            <small class="text-muted">
                                                @product.Sku
                                                @if (product.Category != null)
                                                {
                                                    <span> | @product.Category.Name</span>
                                                }
                                            </small>
                                        </div>
                                        <small class="text-muted">@product.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> אין מוצרים חדשים
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- ספקים אחרונים -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 bg-secondary text-white">
                    <h6 class="m-0 fw-bold">
                        <i class="fas fa-truck-loading"></i> ספקים שנוספו לאחרונה
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentSuppliers.Any())
                    {
                        <div class="row">
                            @foreach (var supplier in Model.RecentSuppliers)
                            {
                                <div class="col-md-4 col-lg-2-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body text-center">
                                            <i class="fas fa-building fa-3x text-secondary mb-3"></i>
                                            <h6 class="card-title">@supplier.Name</h6>
                                            <p class="card-text">
                                                <small class="text-muted">@supplier.Code</small><br>
                                                @if (supplier.Rating.HasValue)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-star"></i> @supplier.Rating.Value.ToString("F1")
                                                    </span>
                                                }
                                            </p>
                                            <a href="/Suppliers/Details/@supplier.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-eye"></i> צפה
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> אין ספקים חדשים
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <script>
        // גרף מוצרים לפי קטגוריה
        @if (Model.ProductsByCategory.Any())
        {
                <text>
                var ctx = document.getElementById('categoryChart').getContext('2d');
                var categoryChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: [@Html.Raw(string.Join(",", Model.ProductsByCategory.Select(c => $"'{c.CategoryName}'")))],
                        datasets: [{
                            label: 'מספר מוצרים',
                            data: [@string.Join(",", Model.ProductsByCategory.Select(c => c.ProductCount))],
                            backgroundColor: [
                                'rgba(54, 162, 235, 0.7)',
                                'rgba(255, 99, 132, 0.7)',
                                'rgba(255, 206, 86, 0.7)',
                                'rgba(75, 192, 192, 0.7)',
                                'rgba(153, 102, 255, 0.7)',
                                'rgba(255, 159, 64, 0.7)',
                                'rgba(199, 199, 199, 0.7)'
                            ],
                            borderColor: [
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(199, 199, 199, 1)'
                            ],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                rtl: true,
                                textDirection: 'rtl'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1
                                }
                            }
                        }
                    }
                });
                </text>
        }
    </script>
}