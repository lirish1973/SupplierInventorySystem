@model ResetPasswordViewModel
@{
    ViewData["Title"] = "איפוס סיסמה";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <i class="fas fa-lock-open fa-4x text-success mb-3"></i>
            <h2 class="mb-1">איפוס סיסמה</h2>
            <p class="text-muted">הזן סיסמה חדשה לחשבון שלך</p>
        </div>

        <form asp-action="ResetPassword" method="post" class="login-form">
            <input type="hidden" asp-for="Token" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.Password)
                </label>
                <input asp-for="Password" type="password" class="form-control form-control-lg"
                       id="passwordInput" placeholder="לפחות 6 תווים" autofocus />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">
                    <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                </label>
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg"
                       placeholder="הזן את הסיסמה שוב" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <small>
                    <strong>דרישות סיסמה:</strong><br>
                    לפחות 6 תווים. מומלץ שילוב של אותיות, מספרים וסימנים.
                </small>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-check"></i> אפס סיסמה
                </button>
            </div>

            <hr class="my-4">

            <div class="text-center">
                <a asp-action="Login" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-arrow-right"></i> חזרה להתחברות
                </a>
            </div>
        </form>
    </div>

    <div class="login-footer">
        <small class="text-muted">
            &copy; 2025 מערכת ניהול ספקים ומלאי
        </small>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}