@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "שכחתי סיסמה";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <i class="fas fa-key fa-4x text-warning mb-3"></i>
            <h2 class="mb-1">שכחתי סיסמה</h2>
            <p class="text-muted">הזן את כתובת הדוא״ל שלך לאיפוס הסיסמה</p>
        </div>

        <form asp-action="ForgotPassword" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope"></i> @Html.DisplayNameFor(m => m.Email)
                </label>
                <input asp-for="Email" type="email" class="form-control form-control-lg"
                       placeholder="example@domain.com" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <small>
                    נשלח אליך קישור לאיפוס סיסמה לכתובת הדוא״ל הרשומה במערכת.
                    הקישור יהיה תקף ל-24 שעות.
                </small>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-warning btn-lg">
                    <i class="fas fa-paper-plane"></i> שלח קישור לאיפוס
                </button>
            </div>

            <hr class="my-4">

            <div class="text-center">
                <a asp-action="Login" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-arrow-right"></i> חזרה להתחברות
                </a>
            </div>
        </form>
    </div>

    <div class="login-footer">
        <small class="text-muted">
            &copy; 2025 מערכת ניהול ספקים ומלאי
        </small>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}