@model ChangePasswordViewModel
@{
    ViewData["Title"] = "שינוי סיסמה";
}

<div class="container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-key"></i> שינוי סיסמה
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label fw-bold">
                                <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.OldPassword)
                            </label>
                            <input asp-for="OldPassword" type="password" class="form-control"
                                   placeholder="הזן סיסמה נוכחית" autofocus />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold">
                                <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <input asp-for="NewPassword" type="password" class="form-control"
                                   placeholder="לפחות 6 תווים" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">
                                <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                            </label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control"
                                   placeholder="הזן סיסמה חדשה שוב" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>טיפים לסיסמה חזקה:</strong>
                            <ul class="mb-0 mt-2">
                                <li>השתמש בלפחות 8 תווים</li>
                                <li>שלב אותיות גדולות וקטנות</li>
                                <li>כלול מספרים וסימנים מיוחדים</li>
                                <li>הימנע משימוש במילים נפוצות</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> שמור סיסמה חדשה
                            </button>
                            <a asp-action="Profile" class="btn btn-secondary">
                                <i class="fas fa-times"></i> ביטול
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}