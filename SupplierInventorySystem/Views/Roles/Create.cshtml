@model SupplierInventorySystem.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "הוספת תפקיד";
}

<div class="container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-plus"></i> הוספת תפקיד חדש</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="לדוגמה: Admin, Manager, User" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="תיאור התפקיד והרשאותיו..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-right"></i> חזרה לרשימה
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> שמור תפקיד
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
