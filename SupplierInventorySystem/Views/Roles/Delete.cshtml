@model SupplierInventorySystem.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "מחיקת תפקיד";
}

<div class="container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> אישור מחיקה</h4>
                </div>
                <div class="card-body">
                    @if (Model.UserCount > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-ban"></i>
                            <strong>לא ניתן למחוק!</strong>
                            יש @Model.UserCount משתמשים משויכים לתפקיד זה.
                            יש להסיר את המשתמשים מהתפקיד לפני המחיקה.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-circle"></i>
                            <strong>שים לב!</strong> פעולה זו אינה ניתנת לביטול.
                        </div>
                    }

                    <p class="lead">האם אתה בטוח שברצונך למחוק את התפקיד הזה?</p>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">שם תפקיד</dt>
                                <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                                <dt class="col-sm-4">תיאור</dt>
                                <dd class="col-sm-8">@(Model.Description ?? "אין תיאור")</dd>

                                <dt class="col-sm-4">משתמשים</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.UserCount</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> ביטול
                            </a>
                            @if (Model.UserCount == 0)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> אישור מחיקה
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
