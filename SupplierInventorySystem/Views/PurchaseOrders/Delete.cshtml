@model SupplierInventorySystem.Models.PurchaseOrder
@{
    ViewData["Title"] = "מחיקת הזמנה";
}

<div class="container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> אישור מחיקה</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>שים לב!</strong> פעולה זו אינה ניתנת לביטול.
                        כל פריטי ההזמנה יימחקו יחד איתה.
                    </div>

                    <p class="lead">האם אתה בטוח שברצונך למחוק את ההזמנה הזו?</p>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">מספר הזמנה</dt>
                                <dd class="col-sm-8 fw-bold">@Model.OrderNumber</dd>

                                <dt class="col-sm-4">ספק</dt>
                                <dd class="col-sm-8">@Model.Supplier?.Name</dd>

                                <dt class="col-sm-4">תאריך</dt>
                                <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">סה"כ</dt>
                                <dd class="col-sm-8">₪@Model.TotalAmount.ToString("N2")</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> ביטול
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> אישור מחיקה
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
